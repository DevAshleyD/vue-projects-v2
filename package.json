{
  "name": "mrcoding",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:server": "cd server && npm run build",
    "clean": "ssh xanonymous@mrcoding.org 'pm2 kill && rm -rf ./dist'",
    "transfer": "scp -r ./dist mrcoding.org:~",
    "start": "ssh xanonymous@mrcoding.org 'pm2 start'",
    "deploy": "npm run build && npm run build:server && cd server && rsync -vrh ./dist/* ../dist/",
    "lint": "vue-cli-service lint --fix",
    "upgrade": "npm upgrade --all && ncu -u"
  },
  "devDependencies": {
    "@better-scroll/core": "^2.4.2",
    "@line/liff": "^2.14.0",
    "@types/socket.io-client": "^1.4.36",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-eslint": "^4.5.13",
    "@vue/cli-plugin-router": "^4.5.13",
    "@vue/cli-plugin-typescript": "^4.5.13",
    "@vue/cli-plugin-vuex": "^4.5.13",
    "@vue/cli-service": "^4.5.13",
    "@vue/composition-api": "^1.1.5",
    "@vue/eslint-config-typescript": "^7.0.0",
    "autoprefixer": "9.8.6",
    "axios": "^0.21.4",
    "body-scroll-lock": "^3.1.5",
    "core-js": "^3.18.0",
    "cssnano": "^4.1.10",
    "dayjs": "^1.10.7",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^7.18.0",
    "klona": "^2.0.4",
    "lax.js": "^2.0.3",
    "lint-staged": "^10.5.4",
    "postcss": "^8.3.6",
    "postcss-assets": "^5.0.0",
    "postcss-cli": "^8.3.1",
    "postcss-import": "12.0.1",
    "postcss-loader": "^4.3.0",
    "postcss-plugin": "^1.0.0",
    "postcss-preset-env": "^6.7.0",
    "prerender-spa-plugin": "^3.4.0",
    "sass": "^1.42.0",
    "sass-loader": "^10.2.0",
    "socket.io-client": "2.3.1",
    "svg-sprite-loader": "^6.0.9",
    "typescript": "^4.4.3",
    "vue": "^2.6.14",
    "vue-cli-plugin-vuetify": "^2.4.2",
    "vue-infinite-loading": "^2.4.5",
    "vue-router": "^3.5.2",
    "vue-template-compiler": "^2.6.14",
    "vuetify": "^2.5.8",
    "vuetify-loader": "^1.7.3",
    "vuex": "^3.6.2",
    "vuex-module-decorators": "^1.0.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add ."
    ]
  }
}
